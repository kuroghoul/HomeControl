<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.21"
            android:gravity="center">

            <View
                android:id="@+id/alarm_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/alarmoff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/alarm_global_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_orange_dark" />

            <TextView
                android:id="@+id/txtets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alarma GLobal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/alarm_door1_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_orange_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puerta Principal" />

            <CheckBox
                android:id="@+id/door1_chk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_orange_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/alarm_pir_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_orange_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor PIR" />

            <CheckBox
                android:id="@+id/pir_chk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_orange_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/alarm_window1_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_orange_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ventana 1" />

            <CheckBox
                android:id="@+id/window1_chk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_orange_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/alarm_window2_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_orange_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ventana 2" />

            <CheckBox
                android:id="@+id/window2_chk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_orange_light" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/alarm_window3_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_orange_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ventana 3" />

            <CheckBox
                android:id="@+id/window3_chk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorLink="@android:color/holo_orange_light" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>